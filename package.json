    "chalk": "2.4.2",
    "cookie-parser": "1.4.4",
    "debug": "4.1.1",
    "ejs": "2.7.1",
    "express": "^4.18.2",
    "express-session": "1.17.0",
    "jquery": "3.4.1",
    "mongodb": "3.3.3",
    "morgan": "1.9.1",
    "nodemon": "1.19.3",
    "passport": "0.4.0",
    "passport-local": "1.0.0",
    "pug": "2.0.4",
    "xml2js": "0.4.22"
  },
  "devDependencies": {
    "eslint": "6.5.1",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "2.18.2"
